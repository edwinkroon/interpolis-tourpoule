{
  "name": "interpolis-tourpoule",
  "version": "1.0.0",
  "description": "Interpolis Tourpoule Fantasy Cycling Game",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"npm:dev:client\" \"npm:dev:functions\"",
    "dev:client": "vite",
    "dev:functions": "netlify functions:serve --port 9999",
    "start": "npm run dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:frontend": "jest --testPathPattern=frontend"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^2.1.3",
    "chart.js": "^4.5.0",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "netlify-cli": "^23.12.3",
    "sass": "^1.80.0",
    "vite": "^7.2.7"
  }
}
